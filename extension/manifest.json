{
	"manifest_version": 2,
	"name": "PASSY Chrome Extension",
	"description": "This is the Chrome Extension for the PASSY Password Manager",
	"version": "1.1",
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "index.html",
		"default_title": "PASSY"
	},
	"background": {
		"scripts": [
			"js/jquery.min.js",
			"src/service.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"js/jquery.min.js",
				"src/index.js"
			],
			"run_at": "document_end"
		}
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"permissions": [
		"activeTab",
		"storage",
		"https://*/*"
	]
}